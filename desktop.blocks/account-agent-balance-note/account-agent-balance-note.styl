clearfix()
  &:before,
  &:after
    content " "
    display table
    
  &:after
    clear both

border-box()
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    
.account-agent-balance-note
    background: #fafafa
    font-size 13px
    line-height 1.3
    padding: 20px 40px 20px 20px;
    
    &__title
        font-weight bold
        margin-bottom 10px
        
    &__text
        margin-bottom 25px
        
    &__note
        font-size 12px
        line-height 1.3
        color #afafaf
        
    &__control-line
        margin-left -10px
        margin-right -10px
        clearfix()
        
        &_margin_s
            margin-bottom 10px
        
    &__control-col
        display inline-block
        padding-left 10px
        padding-right 10px
        vertical-align middle
        border-box()
        
        &_size_s
            line-height 24px
        &_size_m
            line-height 28px
        &_size_l
            line-height 30px
        &_size_xl
            line-height 35px
            
        .select_theme_islands.select
            float none
            display inline-block
        
    &__buttons
        padding 5px 0