clearfix()
  &:before,
  &:after
    content " "
    display table
    
  &:after
    clear both
    
border-box()
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    
.account-dashboard-balance-history
    &_hidden
        display none
            
    &__title
        font-size 20px
        line-height 1.3
        margin-bottom 20px
    
    &__items
        display table
        font-size 15px
        line-height 1.3
        
    &__items-header
        display table-row
        border-bottom 1px solid rgb(229, 229, 229)
        color #afafaf
        vertical-align bottom
        
        .account-dashboard-balance-history__cell
            padding: 5px 0;
    
    &__item
        display table-row

    &__cell
        display table-cell
        padding 10px 10px 0 0
        vertical-align middle
        border-box()
        
        &:first-child
            padding-left 0
            
        &:last-child
            padding-right 0
            
        &_link
            a
                color black
                font-size 15px
                line-height 1.3
                text-decoration none
            &:hover
                color #afafaf
                text-decoration none
        
        &_date
            width 145px
        &_sum
            width 125px
        &_method
            width 230px
        &_status
            width 220px
        &_attachments
            width 190px
        &_refresh
            width 20px
            padding 0
            position relative
            top 5px