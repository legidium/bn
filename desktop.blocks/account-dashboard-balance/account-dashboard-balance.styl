clearfix()
  &:before,
  &:after
    content " "
    display table
    
  &:after
    clear both
    
border-box()
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    
.account-dashboard-balance
    &_hidden
        display none
        
    &__title
        font-size 26px
        line-height 1.3
        margin-bottom 30px

    &__value
        display inline-block
        border 1px solid #e5e5e5
        border-right none
        font-size 13px
        line-height 35px
        width 110px
        height 35px
        padding 0 5px
        text-align center
        vertical-align top
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        border-box()
        
    &__items_row
        margin-left -10px
        margin-right -10px
        clearfix()
    
    &__col
        float left
        padding-left 10px
        padding-right 10px
        border-box()
        
        &_list
            width 265px

    &__item
        font-size 13px
        line-height 1.4
        margin-bottom 10px
        border-box()
        
        &_selected
            color #f5a623
    
    &__item:last-child
        margin-bottom 10px
