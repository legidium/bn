@require "../../design/stylus/index"

.account-dashboard-list-toolbar
    display block
    background #f9f9f9
    padding 0 20px 0 30px
    margin-bottom 10px
    
    &__line
        margin-left -10px
        margin-right -10px
        clearfix()
        
    &__left,
    &__right
        padding-left 10px
        padding-right 10px
        border-box()
        
    &__left       
        float left
        
    &__right
        float right
    
    .button_theme_islands.button .button__text
        margin 0 1px