.account-dashboard-list-tools
    position absolute
    right 0
    top 0
    width 20px
    padding 25px 15px 20px
    z-index 1
    
    &__button
        margin-bottom 5px
        text-align center
        
    &__button_link
        display block

    &__button-edit,
    &__button-copy,
    &__button-remove
        display block
        width 20px
        height 20px
        padding 2px 0
        text-align center
        opacity 0.7
        
        &:hover
            opacity 1

        i.icon
            background-size 18px
            background-position center
            width 18px
            height 18px
            