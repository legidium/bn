clearfix()
  &before,
  &after
    content " "
    display table
    
  &after
    clear both
    
border-box()
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    
.account-dashboard-lists
    &_hidden
        display none
        
    &__title
        font-size 26px
        line-height 1.3
        margin-bottom 20px
        
    &__note
        color #afafaf
        display inline-block
        font-size 15px
        line-height 1.3
        margin-bottom 10px
        padding-left 30px
        width 370px
        position relative
    
    &__note-icon
        background-size 15px 15px
        background-position 0 4px
        position absolute
        left 0
        top 0
        width 25px
        height 25px
        opacity 0.3
        
    &__items
        font-size 0
        line-height 0
        margin-left -10px
        margin-right -10px
        min-height 250px
    
    &__item
        display inline-block
        padding 10px
    
    &__item-content
        display block
        border 1px solid #e5e5e5
        border-radius 3px
        color #000
        cursor pointer
        font-size 13px
        line-height 1.4
        text-decoration none
        overflow hidden
        position relative
        width 200px
        height 160px
        white-space normal
        border-box()
        
        &:hover
            border-color #fedb6b
            text-decoration none
    
    &__item-title,
    &__item-info,
    &__item-status
        display block
        padding 0 15px
        position absolute
        overflow hidden
        left 0
        width 100%
        border-box()

    &__item-title
        font-size 13px
        line-height 18px
        top 15px
        height 90px
    
    &__item-info,
    &__item-status
        font-size 11px
        line-height 14px
        text-overflow ellipsis
        white-space nowrap
    
    &__item-info
        bottom 28px
        
    &__item-status
        color #afafaf
        bottom 8px
        
        
