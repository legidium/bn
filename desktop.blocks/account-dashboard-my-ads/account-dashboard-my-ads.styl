clearfix()
  &:before,
  &:after
    content " "
    display table
    
  &:after
    clear both
    
border-box()
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    
.account-dashboard-my-ads
    &_hidden
        display none
        
    &__title
        font-size 26px
        line-height 1.3
        margin-bottom 20px
    
    &__items_row
        margin-left -10px
        margin-right -10px
        clearfix()
    
    &__col
        float left
        padding-left 10px
        padding-right 10px
        border-box()
        
        &_list
            width 265px

    &__item
        font-size 13px
        line-height 1.4
        margin-bottom 10px
        border-box()
        
        &_selected
            color #f5a623
    
    &__item:last-child
        margin-bottom 10px
        
    &__value
        opaclity 0.33