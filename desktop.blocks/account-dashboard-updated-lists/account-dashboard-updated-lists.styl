.account-dashboard-updated-lists
    &_hidden
        display none
        
    &__title
        font-size 26px
        line-height 1.3
        margin-bottom 20px
        
    &__note
        color #afafaf
        display inline-block
        font-size 15px
        line-height 1.3
        margin-bottom 10px
        padding-left 30px
        width 370px
        position relative
    
    &__note-icon
        background-size 15px 15px
        background-position 0 4px
        position absolute
        left 0
        top 0
        width 25px
        height 25px
        opacity 0.3