@require "../../design/stylus/index"

$border-box
    border-box()

.account-favorites-list-item:focus
    outline none
    
.account-favorites-list-item
    color $text_color
    display block
    text-decoration none

    &__row
        position relative
        border 1px solid transparent
        margin -1px -1px 0 -1px
        padding-left $margin_l
        padding-right $margin_l
        @extends $border-box
        
        &:hover, &:focus
            border-color #fedb6b
    
    &__row-inner
        position relative
            
        &:after
            border-top 1px solid $border_color
            content ''
            clear both
            display block
            height 0
            width 100%
            position absolute
            top 100%
            z-index -1
        
    &__cell
        display table-cell
        padding 10px
        position relative
        vertical-align top
        @extends $border-box
        
        &:first-child
            padding-left 0
        
        /*&:last-child
            padding-right 0*/
    
    &__image-link
        display block
        text-decoration none;
        font-size $font_size_s
        width 100%
        height 100%
        @extends $border-box
        
    &__image
        display block
        width 100%
        height 100%
        @extends $border-box
        
    &__image-holder
        background #9b9b9b
        width 80px
        height 80px
        position relative
        @extends $border-box
    
        &:after, &:before
            content " "
            display none
            position absolute
            top 0
            left 0
            
        &:before
            width 78px
            height 78px
            background #c3c3c3
            z-index -1
            top -3px
            left 50%
            margin-left -39px
            
        &:after 
            width 76px
            height 76px
            background #e5e3e3
            z-index -2
            top -6px
            left 50%
            margin-left -38px
    
    &__top-text
        margin-bottom 10px
        
    &__status-text,
    &__error-text
        color $text_color_light
        display inline
        font-size $font_size_s
        line-height $text_line_height_xs
        
    &__error-text
        margin-left 10px
        
    &__title,
    &__title-link
        font-size $font_size_l
        line-height $text_line_height_s
        margin-bottom 9px
        
    &__text
        font-size $font_size_s
        line-height $text_line_height_s
    
    &__text-help
        font-size $font_size_s
        line-height 1.1
        color $text_color_light
        
    &__comment
        font-size $font_size_m
        line-height 15px
    
    &__text,
    &__title,
    &__text-help,
    &__status-text,
    &__address,
    &__phone
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
    
    /* Columns widths */
    &__cell_address
        width 267px
        min-width 267px
        max-width 267px
        
    &__cell_price
        width 153px
        min-width 153px
        max-width 153px
    
    &__cell_seller
        width 130px
        min-width 130px
        max-width 130px
    
    &__cell_comment
        width 270px
        min-width 270px
        min-width 270px
    
    &__cell_tools
        text-align center
        
    &__cell_tools &__top-text
        margin-bottom 5px
        
    &__cell_tools .objects-list-item-tools__item
        visibility hidden

    &__cell_tools .objects-list-item-tools__item_accept
        visibility visible
            
    &__row:hover &__cell_tools .objects-list-item-tools__item
        visibility visible
    
        
    /* Element mods */ 
    &_many_images &__image-holder:before,
    &_many_images &__image-holder:after
        display: block;
    
    &_selected &__image-holder
        border 2px solid #fedb6b


    &_expires &__error-text
        color #f5a623
        
    &_unpublished &__error-text
        color #d0021b
    
    &_expires &__title,
    &_expires &__text,
    &_expires &__text-help,
    &_expires &__comment,
    &_unpublished &__title,
    &_unpublished &__text,
    &_unpublished &__text-help,
    &_unpublished &__comment
        opacity 0.31
    
    &_expires &__cell_image:afte,
    &_unpublished &__cell_image:after
        background #fff
        content " "
        opacity 0.31
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        z-index 1