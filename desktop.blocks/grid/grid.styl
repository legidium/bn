@require "../../design/stylus/index"

$grid-columns ?= 24
$grid-gutter ?=  30px

percentage($n)
  if $n == 0
    0
  else
    unit($n * 100, "%")
    
.grid
    &__row
        margin-left ceil($grid-gutter / -2)
        margin-right floor($grid-gutter / -2)
        clearfix()
                    
    &__col
        float left
        padding-left ceil($grid-gutter / 2)
        padding-right ($grid-gutter / 2)
        position relative
        min-height 1px
        width 100%
        border-box()
            
        for $index in $grid-columns..0
            if $index > 0
                &_span_{$index}
                    width percentage(($index / $grid-columns))
