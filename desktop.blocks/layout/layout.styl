@require "../../design/stylus/index"

.clearfix
    clearfix()

.layout
    width 1280px
    margin 0 auto
    position relative
    border-box()


    &_has_full_adv
        margin-top  105px
    
    &_ad-page
        background-color #fff
    
    &__content
        border: 1px solid rgb(229, 229, 229);
        border-top: 1px solid transparent;
        border-collapse: collapse;
        display: table;
        position: relative;
        top: -1px;
        width: 100%;
        border-box()
        
    &__left,
    &__right,
    &__middle
        display: table-cell;
        vertical-align: top;
        border-box()
        
    &__left
        border-right 1px solid $border_color
        
    &__right
        border-left 1px solid $border_color

.middle-block 
    width: 540px;
    margin: 0 auto 30px;
    padding: 30px;
    background-color: #fff;
    
    -webkit-box-shadow: 0 8px 10px rgba(126, 126, 126, 0.5);
    -moz-box-shadow: 0 8px 10px rgba(126, 126, 126, 0.5);
    -o-box-shadow: 0 8px 10px rgba(126, 126, 126, 0.5);
    box-shadow: 0 8px 10px rgba(126, 126, 126, 0.5);
    
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -o-border-radius: 4px;
    border-radius: 4px;


.layout_ad-page
    .header,
    .content_layout,
    .footer
        background-color: #fff;

    .footer
        margin-top: 14px;
        border: 1px solid rgba(0, 0, 0, .1)

.content_layout__col
    float left
    
.vertical-top
    vertical-align top

.text-center
    text-align center

.cl_grey 
    color #bbb

.text-italic
    font-style: italic
    
.col-4
    box-sizing: border-box;
    float: left;
    width: 33.33%;