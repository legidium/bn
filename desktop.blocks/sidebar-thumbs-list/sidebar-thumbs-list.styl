@require "../../design/stylus/index"

$link_hover_color ?= rgb(176, 42, 48)

.sidebar-thumbs-list
    &__items
        line-height 0
        margin-left -5px
        margin-right -5px
        line-height 0
        font-size 0
    
    &__item
        display inline-block
        vertical-align top
        margin-bottom $margin_m
        padding-left 5px
        padding-right 5px
        width 130px
        border-box()
            
    &__link,
    &__image,
    &__text
        display block
    
    &__image
        margin-bottom $margin_s
    
    &__link,
    &__text
        color $text_color
        font-size $font_size_xs
        line-height $text_line_height_xs
        
     &__link
        text-decoration none
        
        &:hover, &:focus
            color $link_hover_color
            
            .sidebar-thumbs-list__text         
                color $link_hover_color
                
    &__image-wrapper
        position relative
        
        &_video:after
            content " "
            position absolute
            top 50%
            left 50%
            margin-left -12px
            margin-top -12px
            width 25px
            height 25px
            z-index 1
            background-image: url('data:image/png;base64,');
        
        